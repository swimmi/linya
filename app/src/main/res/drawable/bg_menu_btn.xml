<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorBackgroundPressed" />
            <stroke android:color="@color/colorBackgroundBorder" android:width="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorBackground" />
            <stroke android:color="@color/colorBackgroundBorder" android:width="2dp" />
        </shape>
     </item>

</selector>