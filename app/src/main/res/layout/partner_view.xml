<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="64dp"
    android:layout_height="64dp">

    <LinearLayout
        android:id="@+id/ll_partner_bg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_partner_view"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:id="@+id/v_selection"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_selection"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="4dp"
        android:background="@drawable/bg_circle" >

        <View
            android:id="@+id/v_ling"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_null" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPanel"
        android:textSize="8sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    </LinearLayout>

    <net.swimmi.linya.ui.view.custom.BiasTextView
        android:id="@+id/tv_boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:textColor="@color/colorAccent"
        android:text="BOSS"
        app:degrees="-12"
        android:visibility="gone" />

    <View
        android:id="@+id/v_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/red_dot"
        android:visibility="gone" />

</RelativeLayout>